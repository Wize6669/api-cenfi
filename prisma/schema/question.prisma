model Question {
    id            Int        @id @default(autoincrement())
    text          String
    imageUrl      String?
    justification String?
    answer        Int
    answerId      String
    options       Option[]
    categoryId    Int?
    simulatorId   String?
    Simulator     Simulator? @relation(fields: [simulatorId], references: [id])
    category      Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}
