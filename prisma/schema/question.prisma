model Question {
    id            Int         @id @default(autoincrement())
    content       Json
    justification Json?
    answer        Int
    options       Option[]
    categoryId    Int?
    category      Category?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
    simulators    Simulator[] @relation("SimulatorQuestions") // Relaci√≥n many-to-many
}
