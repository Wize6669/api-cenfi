model Question {
    id            Int        @id @default(autoincrement())
    content       Json
    justification Json?
    answer        Int
    options       Option[]
    categoryId    Int?
    simulatorId   String?
    Simulator     Simulator? @relation(fields: [simulatorId], references: [id])
    category      Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}
