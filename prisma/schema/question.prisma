model Question {
    id            Int            @id @default(autoincrement())
    content       Json
    justification Justification?
    options       Option[]
    categoryId    Int?
    category      Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
    simulators    Simulator[]    @relation("SimulatorQuestions") // Relaci√≥n many-to-many
    images        Imagen[]
}
