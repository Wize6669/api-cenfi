generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    name     String
    lastname String
    email    String @unique
    password String
    roleId   Int
    role     Role   @relation(fields: [roleId], references: [id])
}

model Role {
    id    Int    @id @default(autoincrement())
    title String
    users User[]
}
